{
  "bsonType": "object",
  "required": ["user_id", "target_type", "target_id"],
  "permission": {
    "read": true,
    "create": "auth.uid != null",
    "update": "doc.user_id == auth.uid",
    "delete": "doc.user_id == auth.uid"
  },
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },
    "user_id": {
      "bsonType": "string",
      "description": "点赞用户的ID（来自uni-id-users）"
    },
    "target_type": {
      "bsonType": "string",
      "description": "点赞目标的类型，如 post/comment"
    },
    "target_id": {
      "bsonType": "string",
      "description": "被点赞对象的ID，如某个帖子或评论"
    },
    "post_id": {
      "bsonType": "string",
      "description": "关联的帖子ID（可选）"
    },
    "create_date": {
      "bsonType": "timestamp",
      "description": "发布时间",
      "forceDefaultValue": {
        "$env": "now"
      }
    }
  },
  "indexes": [
    {
      "name": "user_target_unique",
      "unique": true,
      "keys": {
        "user_id": 1,
        "target_id": 1
      }
    },
    {
      "name": "post_id_index",
      "keys": {
        "post_id": 1
      }
    }
  ]
}