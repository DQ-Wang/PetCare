page {
  font-family: "PingFang SC", sans-serif;


  color: #000;
}
.pet-container {
  background-color: #f4f5f9;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}
.pet-avatar {
  /* 头像类 */
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
}
.pet-box {
  width: 690rpx;
  /* 此处可修改margin距离 */
  margin: 50px auto;
  border: 1px solid #eee;
  border-radius: 10rpx;
  box-shadow: 0 0 30rpx rgba(0, 0, 0, 0.05);
}
.pet-list-container {
  display: flex;
  height: 2em;
  justify-content: space-between;
}
.pet-list-ele {
  position: relative;
  flex: 1;
  text-align: center;
  min-width: 0;
  padding: 7px 8px;
  align-items: center;
}
.pet-pic-icon {
  position: absolute;
  left: 82px;
  top: 12px;
  width: 10px;
  height: 10px;
}
.pet-text-cut {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.pet-master-list {
  /* 整个页面布局 */
  height: 90vh;
  background-color: #f4f5f9;
  padding: 10px 0 20px 0;
  /* 已修改 */
  display: flex;
  flex-direction: column;

  /* 新增 */
}
.pet-master {
  /* 卡片盒子 */
  display: flex;

  margin: 8px 8px 12px 8px;

  background-color: white;
  height: 100px;
  border-radius: 16rpx;
}
.pet-avatar {
  flex: 3;
  margin: 20px 5px 20px 5px;
  height: 60px;
  width: 60px;
}
.pet-introduction {
  flex: 10;
  margin: 10px 15px 10px 5px;
}
.pet-online {
  width: 3em;
  text-align: center;
  border-radius: 10px;
  height: 22px;
  background-color: rgb(237, 246, 243);
}
.pet-distance-order {
  position: relative;
  margin: 2px;
  flex: 2;
  display: flex;
  flex-direction: column;
  margin-right: 20rpx;

  /* border: 1px solid red; */
}
.pet-distance {
  /* position: absolute; */
  color: grey;
  font-size: 15px;
  text-align: center;
  padding-top: 15rpx;
  /* top: 15px */
  /* border: 1px solid red; */
}
.pet-order {
  /*  position: absolute; */
  width: 65px;
  height: 25px;
  text-align: center;
  margin: 30rpx auto;
  /* padding-top: 5px; */
  font-weight: bold;
  font-size: 14px;
  border-radius: 20px;
  background-color: #b2d76e;

  /* top: 50px;
  right: 8px; */
  /* border: 1px solid red; */
}
.pet-wizard {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50px;
  display: grid;
  background-color: white;
  grid-template-columns: 20% 20% 20% 20% 20%;
  padding-bottom: 10px;
}
.pet-wizard-image {
  height: 23px;
  margin: 5px 0px 0px 25px;
}
.pet-wizard-text {
  text-align: center;
  margin-right: 3px;
  color: rgb(219, 223, 232);
  font-size: 12px;
}
.pet-unique {
  height: 56px;
  margin: -26px 0px 0px 5px;
}
